{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "dev": {
      "cache": false,
      "persistent": true
    },
    "build": {
      "outputs": [".next/**", "!.next/cache/**", "dist/**"]
    },
    "lint": {},
    "type-check": {},
    "test": {
      "outputs": ["coverage/**"]
    },
    "format": {
      "outputs": []
    },
    "clean": {
      "cache": false
    }
  }
}